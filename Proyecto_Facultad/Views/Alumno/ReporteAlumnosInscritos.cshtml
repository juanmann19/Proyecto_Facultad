@model IEnumerable<Proyecto_Facultad.Models.Alumno>
<style>
    .custom-table-container {
        max-height: 400px;
        overflow-y: auto;
        margin: 20px 0;
        box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 1em;
    }

        .custom-table thead {
            position: sticky;
            top: 0;
            background-color: #343a40;
            color: white;
            z-index: 1;
        }

        .custom-table th, .custom-table td {
            padding: 12px 15px;
            text-align: left;
            white-space: nowrap;
            border: 1px solid #ddd;
        }

        .custom-table tbody tr {
            transition: background-color 0.3s;
        }

            .custom-table tbody tr:hover {
                background-color: #f2f2f2;
            }

    .btn-info-dark {
        background-color: #017a8a;
        border-color: #017a8a;
        color: white;
    }

        .btn-info-dark:focus, .btn-info-dark:active {
            color: white;
        }
</style>

@{
    ViewData["Title"] = "Reporte de alumnos inscritos";
}

<h1>@ViewData["Title"]</h1>

<div class="table-responsive">
    <div class="custom-table-container">
        <table class="table custom-table table-striped table-bordered">
        <thead>
            <tr>
                <th>No.</th> 
                <th>Nombre completo</th>
                <th>Código frater</th>
                <th>Teléfono</th>
                <th>Dirección</th>
            </tr>
        </thead>
        <tbody>
            @{
                var index = 1; // contador 
            }
            @foreach (var alumno in Model)
            {
                <tr>
                    <td>@index</td> <!-- Display the current count -->
                    <td>@($"{alumno.PrimerNombreAlumno} {alumno.SegundoNombreAlumno} {alumno.OtrosNombresAlumno} {alumno.PrimerApellidoAlumno} {alumno.SegundoApellidoAlumno} {alumno.ApellidoCasado}")</td>
                    <td>@alumno.CodigoFrater</td>
                    <td>@alumno.Telefono</td>
                    <td>@alumno.Direccion</td>
                </tr>
                index++; 
            }
        </tbody>
    </table>
  </table>
</div>
