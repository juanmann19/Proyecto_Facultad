@model IEnumerable<Proyecto_Facultad.Models.Alumno>

<style>
    .custom-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 1em;
        box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
    }

        .custom-table thead {
            background-color: #343a40;
            color: white;
        }

        .custom-table th, .custom-table td {
            padding: 12px 15px;
            text-align: left;
            white-space: nowrap; /* Esto evitará que el contenido se extienda innecesariamente */
        }

        .custom-table tbody tr {
            transition: background-color 0.3s;
        }

            .custom-table tbody tr:hover {
                background-color: #f2f2f2;
            }

        .custom-table a:hover {
            text-decoration: underline;
        }
</style>
@{
    ViewData["Title"] = "Reporte de alumnos inscritos";
}

<h1>@ViewData["Title"]</h1>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <table class="table custom-table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nombre completo</th>
            <th>Código frater</th>
            <th>Teléfono</th>
            <th>Dirección</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var alumno in Model)
        {
            <tr>
                <td>@($"{alumno.PrimerNombreAlumno} {alumno.SegundoNombreAlumno} {alumno.OtrosNombresAlumno} {alumno.PrimerApellidoAlumno} {alumno.SegundoApellidoAlumno} {alumno.ApellidoCasado}")</td>
                <td>@alumno.CodigoFrater</td>
                <td>@alumno.Telefono</td>
                <td>@alumno.Direccion</td>
            </tr>
        }
    </tbody>
    </table>
    </table>
</div>

