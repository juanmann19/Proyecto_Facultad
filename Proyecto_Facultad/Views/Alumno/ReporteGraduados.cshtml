@model Proyecto_Facultad.ViewModels.ReporteAlumnosGraduadosViewModel
<style>
    .custom-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 1em;
        box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
    }

        .custom-table thead {
            background-color: #343a40;
            color: white;
        }

        .custom-table th, .custom-table td {
            padding: 12px 15px;
            text-align: left;
            white-space: nowrap; /* Esto evitará que el contenido se extienda innecesariamente */
        }

        .custom-table tbody tr {
            transition: background-color 0.3s;
        }

            .custom-table tbody tr:hover {
                background-color: #f2f2f2;
            }

        .custom-table a:hover {
            text-decoration: underline;
        }
</style>
<h2>Reporte de alumnos graduados</h2>

<div class="table-responsive">
  <div class="custom-table-container">
    <table class="table custom-table table-striped table-bordered">
     <thead>
        <tr class="table-primary">
            <th>Nombre completo</th>
            <th>Teléfono</th>
            <th>Nota obtenida</th>
            <th>Nivel</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var alumno in Model.AlumnosGraduados)
        {
            <tr>
                <td>@alumno.NombreCompleto</td>
                <td>@alumno.Telefono</td>
                <td>@alumno.NotaObtenida</td>
                <td>@alumno.Nivel</td>
            </tr>
        }
    </tbody>
        </table>
   </table>
  </table>
</div>
