@model Proyecto_Facultad.Models.AvanceMesa

<div class="container">
    <h2 class="text-primary pt-3">Editar avance de mesa</h2>
    <form asp-action="Edit">
        <input type="hidden" asp-for="IdAvancemesa" />

        <div class="form-group">
            <label asp-for="IdNivel" class="control-label"></label>
            <select asp-for="IdNivel" class="form-select" asp-items="ViewBag.Niveles" style="width: 400px;"> </select>
            <span asp-validation-for="IdNivel" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IdBimestre" class="control-label"></label>
            <select asp-for="IdBimestre" class="form-select" asp-items="ViewBag.Bimestres" style="width: 400px;"></select>
            <span asp-validation-for="IdBimestre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IdLibro" class="control-label"></label>
            <select asp-for="IdLibro" class="form-select" asp-items="ViewBag.Libros" style="width: 400px;"></select>
            <span asp-validation-for="IdLibro" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IdLeccion" class="control-label"></label>
            <select asp-for="IdLeccion" class="form-select" asp-items="ViewBag.Lecciones" style="width: 400px;"></select>
            <span asp-validation-for="IdLeccion" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IdMesa" class="control-label"></label>
            <select asp-for="IdMesa" class="form-select" asp-items="ViewBag.Mesas" style="width: 400px;"></select>
            <span asp-validation-for="IdMesa" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end">
            <button id="saveButton" type="submit" class="btn btn-sm text-white" style="background-color: #00B6A6; padding: 8px 20px;">
                <i class="bi bi-save me-2"></i> Guardar
            </button>
            <a asp-action="Index" class="btn btn-danger btn-sm ms-2" style="padding: 8px 20px;">
                <i class="bi bi-x me-2"></i> Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Manejar el envío del formulario
            $('form').submit(function () {
                // Deshabilitar el botón al enviar el formulario
                $('#saveButton').prop('disabled', true);
                // Cambiar el texto del botón para indicar que se está procesando
                $('#saveButton').html('<i class="bi bi-hourglass-split me-2"></i> Guardando...');
            });
        });
    </script>
}
