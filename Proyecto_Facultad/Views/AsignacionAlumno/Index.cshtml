@model IEnumerable<dynamic>

<style>
    .custom-table-container {
        max-height: 400px;
        overflow-y: auto;
        margin: 20px 0;
        box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 1em;
    }

        .custom-table thead {
            position: sticky;
            top: 0;
            background-color: #343a40;
            color: white;
            z-index: 1;
        }

        .custom-table th, .custom-table td {
            padding: 12px 15px;
            text-align: left;
            white-space: nowrap;
            border: 1px solid #ddd;
        }

        .custom-table tbody tr {
            transition: background-color 0.3s;
        }

            .custom-table tbody tr:hover {
                background-color: #f2f2f2;
            }

    .btn-info-dark {
        background-color: #017a8a;
        border-color: #017a8a;
        color: white;
    }

        .btn-info-dark:focus, .btn-info-dark:active {
            color: white;
        }
</style>
<div class="container-fluid pt-4">
    @if (TempData["SuccessMessage"] != null)

    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)

    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
        <script>
                setTimeout(function() {
                window.location.href = '@Url.Action("Index", "AsignacionAlumno")';
            }, 15000); // Redirigir después de 15 segundos
        </script>
    }

    @if (TempData["SuccessMessage"] != null)

    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
        <script>
            setTimeout(function() {
                window.location.href = '@Url.Action("Index", "AsignacionAlumno")';
            }, 5000); // Redirigir después de 5 segundos
        </script>
    }
  
    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-primary">Listado de alumnos asignados a mesas</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="AsignacionAlumno" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Agregar un alumno a una mesa
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <div class="custom-table-container">
            <table class="table custom-table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Nombre del alumno</th>
                    <th>Nombre del maestro</th>
                    <th>Sede</th>
                    <th>Jornada</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.IdAsignacionalumnos))

                {
                    <tr>
                        <td>@obj.NombreCompletoAlumno</td>
                        <td>@obj.NombreCompletoMaestro</td> 
                        <td>@obj.Sede</td>
                        <td>@obj.Jornada</td>
                        <td>
                            <div class="btn-group w-100" role="group">
                                    <a asp-controller="AsignacionAlumno" asp-action="Edit" asp-route-id="@obj.IdAsignacionalumnos" class="btn btn-warning flex-grow-1" style="padding: 8px 70px;">
                                        <i class="bi bi-pencil-fill"></i> Editar
                                    </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
           </table>
        </table>
    </div>
</div>
