@model Proyecto_Facultad.Models.Leccion

<div class="container">
<h2 class="text-primary">Eliminar Lección</h2>
<form id="leccionForm" asp-action="Delete" method="post">
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Descripcion" class="form-label"></label>
            <input asp-for="Descripcion" class="form-control" readonly/>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="IdLibro" class="form-label"></label>
            <input asp-for="IdLibro" class="form-control" disabled/>
            <span asp-validation-for="IdLibro" class="text-danger"></span>
        </div>
    </div>
        <div class="form-group text-end">
            <button type="submit" class="btn btn-danger flex-fill me-2" style="padding: 8px 20px;">
                <i class="bi bi-trash-fill"></i> Eliminar
            </button>
            <a asp-action="Index" class="btn btn-primary flex-fill me-2" style="padding: 8px 20px;">
                <i class="bi bi-x me-2"></i> Cancelar
            </a>
        </div>
</form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
