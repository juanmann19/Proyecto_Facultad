@model List<Proyecto_Facultad.Models.Usuario>
<style>
    .custom-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 1em;
        box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
    }

    .custom-table thead {
        background-color: #343a40;
        color: white;
    }

    .btn-info-dark {
        background-color: #017a8a;
        /* Un tono m�s oscuro de cian */
        border-color: #017a8a;
        color: white;
        /* Mant�n el texto en blanco para el contraste */
        .btn-info-dark: focus, .btn-info-dark:active
    }

    .custom-table th,
    .custom-table td {
        padding: 12px 15px;
        text-align: left;
        white-space: nowrap;
        /* Esto evitar� que el contenido se extienda innecesariamente */
    }

    .custom-table tbody tr {
        transition: background-color 0.3s;
    }

    .custom-table tbody tr:hover {
        background-color: #f2f2f2;
    }

    .custom-table a:hover {
        text-decoration: underline;
    }

    /* Ajustamos el ancho de las columnas */
    .custom-table th:nth-child(1),
    .custom-table td:nth-child(1) {
        width: 29%;
        /* Ajusta seg�n sea necesario */
    }

    .custom-table th:nth-child(2),
    .custom-table td:nth-child(2) {
        width: 29%;
        /* Ajusta seg�n sea necesario */
    }
</style>
<div class="container-fluid pt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-primary">Listado de usuarios</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Usuario" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Agregar Usuario
            </a>
        </div>
    </div>
    <style>
        .custom-table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            font-size: 1em;
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
        }

        .custom-table thead {
            background-color: #343a40;
            color: white;
        }

        .custom-table th,
        .custom-table td {
            padding: 12px 15px;
            text-align: left;
        }

        .custom-table tbody tr {
            transition: background-color 0.3s;
        }

        .custom-table tbody tr:hover {
            background-color: #f2f2f2;
        }

        .custom-table a {
            color: #007bff;
            text-decoration: none;
        }

        .custom-table a:hover {
            text-decoration: underline;
        }
    </style>
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <table class="table custom-table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Nombre del usuario</th>
                        <th>Rol</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model.OrderBy(u => u.NombreUsuario))
                    {
                        <tr>
                            <td>@usuario.NombreUsuario</td>
                            <td>@usuario.IdRolNavigation.NombreRol</td> <!-- Muestra el nombre del rol -->
                            <td>@(usuario.EstadoUsuario ? "Activo" : "Inactivo")</td>
                            <td style="align-items: center;">
                                <div class="btn-group w-100" role="group">
                                    <div class="me-2">
                                        <a asp-controller="Usuario" asp-action="Edit" asp-route-id="@usuario.IdUsuario"
                                            class="btn btn-warning btn-sm" style="padding: 8px 30px; color: white;">
                                            <i class="bi bi-pencil-fill me-2"></i> Editar
                                        </a>

                                    </div>
                                    <div>
                                        <form asp-action="Deactivate" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@usuario.IdUsuario" />
                                            <button type="submit" class="btn btn-info-dark btn-sm"
                                                style="padding: 8px 30px;">
                                                <i class="bi bi-power me-2"></i> Desactivar
                                            </button>
                                        </form>
                                        <form asp-action="Activate" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@usuario.IdUsuario" />
                                            <button type="submit" class="btn btn-success btn-sm" style="padding: 8px 30px;">
                                                <i class="bi bi-check me-2"></i> Activar
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </table>
    </div>
</div>
