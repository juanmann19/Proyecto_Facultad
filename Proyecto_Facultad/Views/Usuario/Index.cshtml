@model List<Proyecto_Facultad.Models.Usuario>

<div class="container-fluid pt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-primary">Listado de usuarios creados</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Usuario" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Agregar Usuario
            </a>
        </div>
    </div>
    <style>
        .custom-table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            font-size: 1em;
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
        }

            .custom-table thead {
                background-color: #343a40;
                color: white;
            }

            .custom-table th,
            .custom-table td {
                padding: 12px 15px;
                text-align: left;
            }

            .custom-table tbody tr {
                transition: background-color 0.3s;
            }

                .custom-table tbody tr:hover {
                    background-color: #f2f2f2;
                }

            .custom-table a {
                color: #007bff;
                text-decoration: none;
            }

                .custom-table a:hover {
                    text-decoration: underline;
                }
    </style>
    <div class="table-responsive">
        <table class="table table-bordered table-striped custom-table">
            <thead>
                <tr>
                    <th>Nombre Usuario</th>
                    <th>Rol</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model.OrderBy(u => u.NombreUsuario))
                {
                    <tr>
                        <td>@usuario.NombreUsuario</td>
                        <td>@usuario.IdRolNavigation.NombreRol</td> <!-- Muestra el nombre del rol -->
                        <td>@(usuario.EstadoUsuario ? "Activo" : "Inactivo")</td>
                        <td style="align-items: center;">
                            <div class="d-grid gap-2">
                                    <a asp-controller="Usuario" asp-action="Edit" asp-route-id="@usuario.IdUsuario" class="btn btn-warning text-white d-flex justify-content-center align-items-center">
                                        <i class="bi bi-pencil-fill me-2"></i> Editar
                                    </a>
                                  <div>
                                    <!-- Botón de Activar (solo aparece si el usuario está inactivo) -->
                                    @if (!usuario.EstadoUsuario)
                                    {
                                        <form asp-action="Activate" method="post">
                                            <button type="submit" asp-controller="Usuario" asp-action="Activate" asp-route-id="@usuario.IdUsuario" class="btn text-white" style="background-color: #00A1A9;">
                                                <i class="bi bi-check-lg me-2"></i> Activar
                                            </button>
                                        </form>
                                    }

                                    <!-- Botón de Inactivar (solo aparece si el usuario está activo)-->
                                    @if (usuario.EstadoUsuario)
                                    {
                                        <form asp-action="Deactivate" method="post">
                                            <button type="submit" asp-controller="Usuario" asp-action="Deactivate" asp-route-id="@usuario.IdUsuario" class="btn btn-danger d-flex justify-content-center align-items-center">
                                                <i class="bi bi-x-lg me-2"></i> Desactivar
                                            </button>
                                        </form>
                                    }

                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
