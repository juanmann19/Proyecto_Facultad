@model Proyecto_Facultad.Models.Capacitacion

<div class="container">
    <h2 class="text-primary">Crear capacitación</h2>

@*     <form id="sedeForm" asp-action="Create" method="post"> *@
      <form asp-action="Create" method="post">    
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="FechaCapacitacion" class="form-label"></label>
                <input id="FechaCapacitacion" asp-for="FechaCapacitacion" class="form-control" type="date" />
                <span id="FechaCapacitacionError" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="IdStaff" class="form-label"></label>
                <select asp-for="IdStaff" class="form-control" asp-items="ViewBag.IdStaff">
                </select>
            </div>
        </div>
        <div class="form-group text-end">
            <button type="submit" class="btn btn-sm text-white" style="background-color: #00B6A6; padding: 8px 20px;">
                <i class="bi bi-save me-2"></i> Guardar
            </button>
            <a asp-action="Index" class="btn btn-danger btn-sm" style="padding: 8px 20px;">
                <i class="bi bi-x me-2"></i> Cancelar
            </a>
        </div>
    </form>
</div>

