@model Proyecto_Facultad.Models.Nivel

<div class="container">
    <h2 class="text-primary">Eliminar nivel</h2>

    <form id="nivelForm" asp-action="Delete" method="post">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="NombreNivel" class="form-label"></label>
                <input asp-for="NombreNivel" class="form-control" readonly />
            </div>
        </div>


        <div class="form-group text-end">
            <button type="submit" class="btn btn-danger flex-fill me-2" style="padding: 8px 20px;">
                <i class="bi bi-trash-fill"></i> Eliminar
            </button>
            <a asp-action="Index" class="btn btn-primary flex-fill me-2" style="padding: 8px 20px;">
                <i class="bi bi-x me-2"></i> Cancelar
            </a>
        </div>
    </form>
</div>
