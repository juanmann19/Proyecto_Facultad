@model Proyecto_Facultad.Models.AsistenciaStaff

<div class="container">
    <h2 class="text-primary">Crear asistencia personal</h2>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="control-label">Nombre maestro</label>
                <select asp-for="IdStaff" id="IdStaff" class="form-control" asp-items="@(ViewData["IdStaff"] as SelectList)">
                    <option value="">Seleccione un maestro</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="FechaClase" class="form-label">Fecha de clase</label>
                <input asp-for="FechaClase" class="form-control" type="date" />
                <span asp-validation-for="FechaClase" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="IdMesa" class="form-label">Mesa</label>
                <select asp-for="IdMesa" id="IdMesa" class="form-control">
                    <option value="">Seleccione</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="IdLeccion" class="form-label">Lección</label>
                <select asp-for="IdLeccion" class="form-control" asp-items="ViewBag.IdLeccion">
                    <option value="">Seleccione</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="IdBimestre" class="form-label"></label>
                <select asp-for="IdBimestre" class="form-control" asp-items="ViewBag.IdBimestre">
                    <option value="">Seleccione</option>
                </select>
            </div>
        </div>


        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Ausencia" class="form-label">Asistencia</label>
                <select asp-for="Ausencia" class="form-control">
                    <option value="">Seleccionar</option>
                    <option value="Presente">Asistió</option>
                    <option value="Ausente">Inasistencia</option>
                    <option value="Examen">Examen</option>
                    <option value="Bautizo">Acompañar a bautizo</option>
                    <option value="Enfermedad">Enfermedad</option>
                    <option value="Sustitución">Sustitución de maestro</option>
                </select>
            </div>
        </div>

        <div class="form-group text-end">
            <button id="saveButton" type="submit" class="btn btn-sm text-white" style="background-color: #00B6A6; padding: 8px 20px;">
                <i class="bi bi-save me-2"></i> Guardar
            </button>
            <a asp-action="Index" class="btn btn-danger btn-sm" style="padding: 8px 20px;">
                <i class="bi bi-x me-2"></i> Cancelar
            </a>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
       $(document).ready(function () {
    // Manejar el envío del formulario
    $('form').submit(function () {
        // Deshabilitar el botón al enviar el formulario
        $('#saveButton').prop('disabled', true);
        // Cambiar el texto del botón para indicar que se está procesando
        $('#saveButton').html('<i class="bi bi-hourglass-split me-2"></i> Guardando...');
    });

    // Cargar mesas dinámicamente según el maestro seleccionado
    $('#IdStaff').change(function () {
        var idStaff = $(this).val();
        if (idStaff) {
            $.ajax({
                url: '/AsistenciaStaffs/GetMesasPorMaestro',
                type: 'GET',
                data: { idStaff: idStaff },
                success: function (mesas) {
                    var mesaSelect = $('#IdMesa');
                    mesaSelect.empty();
                    mesaSelect.append(new Option("Seleccione", ""));
                    $.each(mesas, function (index, mesa) {
                        mesaSelect.append(new Option(mesa.mesaDescripcion, mesa.idMesa));
                    });
                },
                error: function () {
                    alert('Error al cargar las mesas. Intente nuevamente.');
                }
            });
        } else {
            $('#IdMesa').empty();
            $('#IdMesa').append(new Option("Seleccione", ""));
        }
    });

    // Forzar la carga inicial de mesas si ya hay un maestro seleccionado
    var idStaffInicial = $('#IdStaff').val();
    if (idStaffInicial) {
        $('#IdStaff').trigger('change');
    }
});

    </script>
}





