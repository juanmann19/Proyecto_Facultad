<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/jpeg" href="/images/LogoN.jpg"   />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> LCP-FFL </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proyecto_Facultad.styles.css" asp-append-version="true" />
    <style>
        .navbar {
            background-color: #ffffff;
            /* Blanco */
            color: #ffffff;
        }

        .dropdown-menu {
            background-color: #ffffff;
            /* Blanco */
        }

        .dropdown-item:hover {
            background-color: #0690c3;
            /* Azul */
            color: #ffffff;
            /* Texto blanco */
        }

        .dropdown-item {
            color: #000000;
            /* Negro */
        }

        .nav-link:hover {
            color: #ffffff;
            /* Blanco */
        }

        .dropdown-menu {
            display: none;
            /* Para evitar que se muestre por defecto */
        }

        .dropdown-menu.show {
            display: block;
            /* Para mostrar el menú cuando esté activo */
        }
        .dropdown-submenu {
            position: relative;
        }

            .dropdown-submenu .dropdown-menu {
                top: 0;
                left: 100%;
                margin-top: -1px;
            }

            .dropdown-submenu:hover .dropdown-menu {
                display: block;
            }

    </style>


</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand logo-link" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/Logo_website-LCPGT-removebg-preview(1).png" alt="Proyecto Facultad Logo" style="height: 60px;" class="logo-image">
                </a>
                <style>
                    .logo-link {
                        display: inline-block; /* Asegura que el enlace envuelva bien la imagen */
                        
                    }

                    .logo-image {
                        transition: filter 0.3s ease; /* Transición suave para el efecto */
                        transition: transform 0.3s ease; /* Transición suave para la imagen */
                    }

                    .logo-link:hover .logo-image {
                        filter: brightness(0) saturate(100%) invert(36%) sepia(99%) saturate(2634%) hue-rotate(178deg) brightness(91%) contrast(99%);
                    }
                </style>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                   <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <br />
                    <ul class="navbar-nav flex-grow-1">
                          @if (User.IsInRole("Coordinador") || User.IsInRole("Admin"))
                        {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="gestionesDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Gestiones administrativas
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="gestionesDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Usuario"
                                        asp-action="Index">Registrar usuario</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Staffs"
                                        asp-action="Index">Registro personal</a></li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Alumno"
                                           asp-action="Index">Registro alumno</a>
                                    </li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Sedes"
                                           asp-action="Index">Registrar sede</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Jornadums"
                                           asp-action="Index">Registrar jornada</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Nivels"
                                        asp-action="Index">Registrar nivel</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Bimestre"
                                           asp-action="Index">Registrar bimestre</a>
                                    </li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Libro"
                                        asp-action="Index">Registro libro</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Leccion"
                                        asp-action="Index">Registrar lección</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Mesas"
                                        asp-action="Index">Registro mesa</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Capacitacion"
                                        asp-action="Index">Registro capacitación</a></li>
                            </ul>
                        </li>
                        }
                        @if (User.IsInRole("Maestro") || User.IsInRole("Admin"))
                        {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="alumnosDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Alumnos
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="alumnosDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Nota"
                                        asp-action="Index">Asignar nota a un alumno</a></li>
                            </ul>
                        </li>
                        }
                       @*  @if (User.IsInRole("Coordinador") || User.IsInRole("Admin") || User.IsInRole("Auxiliar"))
                        {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="staffDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Staff
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="staffDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Capacitacion"
                                        asp-action="Index">Listado de capacitaciones</a></li>
                            </ul>
                        </li>
                        } *@
                        @if (User.IsInRole("Auxiliar") || User.IsInRole("Maestro") || User.IsInRole("Admin"))
                        {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="alumnosDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Asistencia
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="alumnosDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="AsistenciaStaffs"
                                        asp-action="Index">Añadir asistencia personal</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="AsistenciaAlumnoes"
                                        asp-action="Index">Añadir asistencia alumnos</a></li>
                            </ul>
                        </li>
                        }
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="mesasDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Mesa
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="mesasDropdown">
                                @if (User.IsInRole("Coordinador") || User.IsInRole("Admin"))
                                {
                                <li><a class="dropdown-item" asp-area="" asp-controller="AsignacionAlumno"
                                        asp-action="Index">Asignar alumno a mesa</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="AsignacionMaestroes"
                                        asp-action="Index">Asignar personal a mesa</a></li>
                                }
                                @if (User.IsInRole("Auxiliar") || User.IsInRole("Maestro")|| User.IsInRole("Admin"))
                                {
                                <li><a class="dropdown-item" asp-area="" asp-controller="AvanceMesa"
                                        asp-action="Index">Avance mesa</a>
                                </li>
                                }
                                @if (User.IsInRole("Coordinador") || User.IsInRole("Admin") ||User.IsInRole("Auxiliar") )
                                {
                                <li><a class="dropdown-item" asp-area="" asp-controller="MesaDetalle"
                                        asp-action="Index">Detalle mesas</a>
                                </li>
                                }
                            </ul>
                        </li>
                        
                        @if (User.IsInRole("Coordinador") || User.IsInRole("Admin"))
                        {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="reportesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Reportes
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="reportesDropdown">
                                <li class="dropdown-submenu">
                                    <a class="dropdown-item dropdown-toggle" href="#">Avance mesa</a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="ReporteAvanceMesa" asp-action="FiltrarPorBimestre">Por bimestre</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="ReporteAvanceMesa" asp-action="FiltrarPorNivel">Por nivel</a></li>
                                    </ul>
                                 </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Alumno" asp-action="BautizadosPorMes">Alumnos bautizados</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Capacitacion" asp-action="Reporte">Capacitaciones recibidas</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="AsignacionMaestroes" asp-action="Reporte">Maestros sin asignación</a>
                                </li>
                                <li class="dropdown-submenu">
                                    <a class="dropdown-item dropdown-toggle" href="#">Alumnos graduados</a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Alumno" asp-action="ReporteGraduados">Nivel 1</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Alumno" asp-action="ReporteGraduadosNivel2">Nivel 2</a></li>
                                    </ul>
                                </li>


                                <li><a class="dropdown-item" asp-area="" asp-controller="Alumno" asp-action="ReporteAlumnosInscritos">Alumnos inscritos</a></li>

                            </ul>
                        </li>
                        }

                    </ul>
                    @if (User.IsInRole("Coordinador") || User.IsInRole("Admin")||User.IsInRole("Auxiliar") || User.IsInRole("Maestro") )
                    {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home"
                                        asp-action="Privacy">Ayuda</a>
                        </li>
                    </ul>
                    }
                    <ul class="navbar-nav d-flex align-items-center">
                        <!-- Verifica si el usuario está autenticado -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <!-- Muestra el nombre del usuario logueado -->
                                <span class="navbar-text m-3">
                                    Bienvenido @User.Identity.Name
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Cuentas" asp-action="Logout">Salir</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Cuentas" asp-action="Login">Iniciar sesión</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Proyecto_Facultad - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
