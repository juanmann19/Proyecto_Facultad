@model Proyecto_Facultad.Models.Bimestre

<div class="container">
    <h2 class="text-primary">Eliminar bimestre</h2>
    <form id="BimestreForm" asp-action="Delete" method="post">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="NombreBimestre" class="form-label"></label>
                <input asp-for="NombreBimestre" class="form-control" />
                <span asp-validation-for="NombreBimestre" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group text-end">
            <a asp-action="submit" class="btn btn-danger flex-fill me-2" style="padding: 8px 20px;">
                <i class="bi bi-trash-fill"></i> Eliminar
            </a>
            <a asp-action="Index" class="btn btn-primary flex-fill me-2" style="padding: 8px 20px;">
                <i class="bi bi-x me-2"></i> Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}



