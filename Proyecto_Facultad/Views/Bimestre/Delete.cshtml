@model Proyecto_Facultad.Models.Bimestre

<div class="container">
    <h2 class="text-primary">Eliminar Bimestre</h2>
    <form id="BimestreForm" asp-action="Delete" method="post">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="NombreBimestre" class="form-label"></label>
                <input asp-for="NombreBimestre" class="form-control" />
                <span asp-validation-for="NombreBimestre" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group d-flex">
            <button type="submit" class="btn btn-primary flex-fill me-2">Eliminar</button>
            <a asp-action="Index" asp-controller="bimestre" class="btn btn-danger flex-fill">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}



