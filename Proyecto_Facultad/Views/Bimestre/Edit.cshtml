@model Proyecto_Facultad.Models.Bimestre

<div class="container">
    <h2 class="text-primary pt-3">Editar bimestre</h2>
    <form asp-controller="Bimestre" asp-action="Edit" method="post">
        <div class="row mb-3">
            <input type="hidden" asp-for="IdBimestre" />
            <div class="col-md-6">
                <label asp-for="NombreBimestre" class="form-label"></label>
                <input asp-for="NombreBimestre" class="form-control" />
                <span asp-validation-for="NombreBimestre" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group text-end">
            <button type="submit" class="btn btn-sm text-white" style="background-color: #00B6A6; padding: 8px 20px;">
                <i class="bi bi-save me-2"></i> Guardar
            </button>
            <a asp-action="Index" class="btn btn-danger btn-sm" style="padding: 8px 20px;">
                <i class="bi bi-x me-2"></i> Cancelar
            </a>
        </div>

    </form>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}