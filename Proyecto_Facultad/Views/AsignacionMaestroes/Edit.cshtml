@model Proyecto_Facultad.Models.AsignacionMaestro

<div class="container">
    <h2 class="text-primary">Editar Asignación de Personal a una Mesa</h2>
    <br />
    <br />

    @if (!ViewData.ModelState.IsValid)

    {
        <div class="alert alert-danger">
            @Html.ValidationSummary()
        </div>
    }

    <form id="asignacionForm" asp-action="Edit" method="post">
        <input type="hidden" asp-for="IdAsignacionmaestros" />

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="IdStaff" class="control-label"></label>
                <select asp-for="IdStaff" asp-items="ViewBag.IdStaff" class="form-control"></select>
                <span asp-validation-for="IdStaff" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="IdMesa" class="form-label"></label>
                <select asp-for="IdMesa" asp-items="ViewBag.IdMesa" class="form-control"></select>
                <span asp-validation-for="IdMesa" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group text-end">
            <button type="submit" class="btn btn-sm text-white" style="background-color: #00B6A6; padding: 8px 20px;">
                <i class="bi bi-save me-2"></i> Guardar
            </button>
            <a asp-action="Index" class="btn btn-danger btn-sm" style="padding: 8px 20px;">
                <i class="bi bi-x me-2"></i> Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

