@model IEnumerable<Proyecto_Facultad.Models.AsistenciaAlumno>
<style>
    .custom-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 1em;
        box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
    }

        .custom-table thead {
            background-color: #343a40;
            color: white;
        }

        .custom-table th, .custom-table td {
            padding: 12px 15px;
            text-align: left;
            white-space: nowrap; /* Esto evitará que el contenido se extienda innecesariamente */
        }

        .custom-table tbody tr {
            transition: background-color 0.3s;
        }

            .custom-table tbody tr:hover {
                background-color: #f2f2f2;
            }

        .custom-table a:hover {
            text-decoration: underline;
        }
</style>

<div class="container-fluid pt-4">
    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-primary">Asistencia de alumnos</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Agregar asistencia alumnos
            </a>
        </div>
    </div>

    @* Mostrar mensaje de éxito *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @* Mostrar mensaje de error *@
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <table class="table custom-table table-striped table-bordered">
            <thead>
                   <tr class="table">
                    <th>Nombre alumno</th>
                    <th>Asistencia</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdAlumnoNavigation.NombreCompleto</td>
                        <td>@item.Ausencia</td>
                        <td>
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Edit" asp-route-id="@item.IdAsistenciaAlumno" class="btn btn-warning flex-grow-1">
                                    <i class="bi bi-pencil-fill"></i> Editar
                                </a>
                                @* Puedes agregar un botón para eliminar si es necesario *@
                                @* <form asp-action="Delete" asp-route-id="@item.IdAsistenciaAlumno" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger flex-grow-1" onclick="return confirm('¿Estás seguro de que deseas eliminar esta asistencia?');">
                            <i class="bi bi-trash-fill"></i> Eliminar
                            </button>
                            </form> *@
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
            </table>
        </table>
    </div>
</div>
