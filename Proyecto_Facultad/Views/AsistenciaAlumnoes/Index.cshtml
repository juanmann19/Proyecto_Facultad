@model IEnumerable<Proyecto_Facultad.Models.AsistenciaAlumno>

<style>
    .custom-table-container {
        max-height: 400px;
        overflow-y: auto;
        margin: 20px 0;
        box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 1em;
    }

        .custom-table thead {
            position: sticky;
            top: 0;
            background-color: #343a40;
            color: white;
            z-index: 1;
        }

        .custom-table th, .custom-table td {
            padding: 12px 15px;
            text-align: left;
            white-space: nowrap;
            border: 1px solid #ddd;
        }

        .custom-table tbody tr {
            transition: background-color 0.3s;
        }

            .custom-table tbody tr:hover {
                background-color: #f2f2f2;
            }
</style>

<div class="container-fluid pt-4">
    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-primary">Asistencia de alumnos</h2>
        </div>
    </div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="table-responsive">
        <div class="custom-table-container">
            <table class="table custom-table table-striped table-bordered">
                <thead>
                    <tr class="table">
                        <th>No.</th>
                        <th>Nombre alumno</th>
                        <th>Maestro en Sustitución</th>
                        <th>Asistencia</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int contador = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@contador</td> 
                            <td>@item.IdAlumnoNavigation?.NombreCompleto</td> 
                            <td>
                                @if (item.IdAsistenciaStaffNavigation?.IdMaestroSustitutoNavigation != null)
                                {
                                    if (item.IdAsistenciaStaffNavigation.IdMaestroSustitutoNavigation.IdStaff ==
                                    item.IdAsistenciaStaffNavigation.IdStaffNavigation.IdStaff)
                                    {
                                        <em>No hay maestro a sustituir</em>
                                    }
                                    else
                                    {
                                        @($"{item.IdAsistenciaStaffNavigation.IdMaestroSustitutoNavigation.PrimerNombreStaff} {item.IdAsistenciaStaffNavigation.IdMaestroSustitutoNavigation.PrimerApellidoStaff}")
                                    }
                                }
                                else
                                {
                                    <em>No hay maestro a sustituir</em>
                                }
                            </td>
                            <td>@item.Ausencia</td> 
                            <td>
                                <div class="btn-group w-100" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.IdAsistenciaAlumno" class="btn btn-warning flex-grow-1">
                                        <i class="bi bi-pencil-fill"></i> Editar
                                    </a>
                                </div>
                            </td>
                        </tr>
                        contador++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

