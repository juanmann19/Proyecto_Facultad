@model Proyecto_Facultad.Models.Libro

<div class="container">
    <h2 class="text-primary pt-3">Editar Libro</h2>
    <form asp-controller="Libro" asp-action="Edit" method="post">
        <div class="row mb-3">
            <input type="hidden" asp-for="IdLibro" />
            <div class="col-md-6">
                <label asp-for="NombreLibro" class="form-label"></label>
                <input asp-for="NombreLibro" class="form-control" />
                <span asp-validation-for="NombreLibro" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="form-group d-flex" style="width: 40%;">
                <button type="submit" class="btn btn-success flex-fill me-2">Guardar</button>
                <a asp-action="Index" asp-controller="libro" class="btn btn-danger flex-fill">Cancelar</a>
            </div>
        </div>

    </form>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}