<h1 style="padding-top: 2%;">Documentación</h1>

<div class="help-container">

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-warning">
            @ViewBag.Message
        </div>
    }

    <h3>Manual de Usuario</h3>
    <table class="styled-table">
        <thead>
            <tr>
                <th>Acción</th>
                <th>Enlace</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Descargar Manual PDF</td>
                <td>
                    <a href="@Url.Action("GetManual", "Privacy")" class="download-link">
                        <i class="fas fa-download" style="margin-right: 8px;"></i> Descargar
                    </a>
                </td>
            </tr>
            <tr>
                <td>Previsualizar Manual PDF</td>
                <td>
                    <a href="@Url.Action("PreviewManual", "Privacy")" class="preview-link" target="_blank">
                        <i class="fas fa-eye" style="margin-right: 8px;"></i> Previsualizar
                    </a>
                </td>
            </tr>
        </tbody>
    </table>

    <h3>Manual Técnico</h3>
    <table class="styled-table">
        <thead>
            <tr>
                <th>Acción</th>
                <th>Enlace</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Descargar Manual PDF</td>
                <td>
                    <a href="@Url.Action("GetGuia", "Privacy")" class="download-link">
                        <i class="fas fa-download" style="margin-right: 8px;"></i> Descargar
                    </a>
                </td>
            </tr>
            <tr>
                <td>Previsualizar Manual PDF</td>
                <td>
                    <a href="@Url.Action("PreviewGuia", "Privacy")" class="preview-link" target="_blank">
                        <i class="fas fa-eye" style="margin-right: 8px;"></i> Previsualizar
                    </a>
                </td>
            </tr>
        </tbody>
    </table>

    <h2>Otras Opciones de Ayuda</h2>
    <div class="video-option">
        <h4>Video de Ayuda</h4>
        <p>A continuación, encontrarás un video que puede ser útil:</p>
        <a href="https://drive.google.com/drive/folders/1T3IfPuuNDbB82qqEBXV-nupeJ1RjoljU?usp=sharing" class="video-link">
            <i class="fas fa-video" style="margin-right: 8px;"></i> Ver Video
        </a>
    </div>
</div>

<style>
    .help-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .help-container h2, .help-container h3 {
        margin-top: 20px;
    }

    .styled-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 1.1em;
        font-family: 'Arial', sans-serif;
        border-radius: 10px 10px 0 0;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .styled-table thead tr {
        background-color: #001f3f;
        color: white;
        text-align: left;
    }

    .styled-table th, .styled-table td {
        padding: 12px 15px;
    }

    .styled-table tbody tr {
        border-bottom: 1px solid #dddddd;
    }

    .styled-table tbody tr:hover {
        background-color: #f1f1f1;
    }

    .download-link, .preview-link, .video-link {
        display: flex;
        align-items: center;
        padding: 10px 0;
        text-decoration: none;
        color: #001f3f;
        font-size: 16px;
    }

    .download-link:hover, .preview-link:hover, .video-link:hover {
        text-decoration: underline;
    }

    .video-option {
        padding: 15px;
        border: 1px solid #001f3f;
        border-radius: 8px;
        background-color: #e7f3ff;
        margin-top: 20px;
    }

    .alert {
        margin-bottom: 20px;
        padding: 10px;
        background-color: #fff3cd;
        border: 1px solid #ffeeba;
        color: #856404;
        border-radius: 4px;
    }
</style>

<!-- Asegúrate de incluir Font Awesome en tu proyecto para los iconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
